<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/tools"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:ignore="NamespaceTypo">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="353dp"
            android:layout_height="99dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MENU"
                android:textColor="#0A0A0A"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="18dp"
                android:gravity="bottom"
                android:text="6 item"
                android:textColor="#E91E63"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="124dp"
                android:layout_height="98dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:src="@drawable/logo" />

        </RelativeLayout>

        <GridLayout

            android:layout_width="313dp"
            android:layout_height="145dp"
            android:layout_alignParentEnd="true"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:rowCount="3">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardelevation="60dp" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardelevation="60dp" />


            <ImageView
                android:id="@+id/qrcode"
                android:layout_width="122dp"
                android:layout_height="93dp"
                android:layout_row="0"
                android:layout_column="8"
                android:layout_gravity="center"
                android:onClick="onClick"
                app2:srcCompat="@drawable/qr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="8"
                android:layout_gravity="bottom"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="แสกน Qrcode และระบุปัญหา "
                android:textColor="#0A0A0A"
                android:textSize="20dp"
                android:textStyle="bold" />
        </GridLayout>

        <GridLayout

            android:layout_width="322dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:rowCount="3">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardelevation="60dp" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardelevation="60dp" />


            <ImageView
                android:id="@+id/follow"
                android:layout_width="157dp"
                android:layout_height="107dp"
                android:layout_row="0"
                android:layout_column="8"
                android:layout_gravity="center"
                android:onClick="onClick"
                app2:srcCompat="@drawable/f" />

            <TextView
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="8"
                android:layout_gravity="bottom"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="ติดตามผลการแจ้งซ่อม"
                android:textColor="#0C0C0C"
                android:textSize="20dp"
                android:textStyle="bold" />
        </GridLayout>

        <GridLayout

            android:layout_width="372dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:rowCount="3">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardelevation="60dp" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardelevation="60dp" />

            <ImageView
                android:id="@+id/logout"
                android:layout_width="145dp"
                android:layout_height="101dp"
                android:layout_row="0"
                android:layout_column="9"
                android:layout_gravity="center"
                android:onClick="onClick"
                app2:srcCompat="@drawable/upload" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="9"
                android:layout_gravity="bottom"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="     Logout      "
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/point"
                android:layout_width="184dp"
                android:layout_height="107dp"
                android:layout_row="0"
                android:layout_column="8"
                android:layout_gravity="center"
                android:onClick="onClick"
                app2:srcCompat="@drawable/internet" />

            <TextView
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="8"
                android:layout_gravity="bottom"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="ให้คะแนนแอพ"
                android:textColor="#030303"
                android:textSize="20dp"
                android:textStyle="bold" />
        </GridLayout>


        <GridLayout

            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:rowCount="3">

        </GridLayout>

    </LinearLayout>

</ScrollView>